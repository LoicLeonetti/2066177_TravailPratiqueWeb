{% extends('base.html.twig') %}


{% block body %}

	<!-- Nom: Loic Leonetti -->
	<!-- Date: 2024-03-20   -->

		{% if panier.produits == null %}<h1>Votre panier est vide
		</h1>

	{% else %}
		<h1>Votre Panier:</h1>

		<div class="container">
			<form action = "{{path('updateQuantite')}}">
				<table class="table table-bordered">
					<thead>
						<tr>
							<th>Nom</th>
							<th>Prix</th>
							<th>
								<div class="row">
									<div class="col-3">Quantit√©</div>
									<div class="col-3">
										<button class="btn btn-success" name="soumettre">Mise a jour</button>
									</div>
								</div>
							</th>
							<th>Total</th>
							<th>Supprimer</th>
						</tr>
					</thead>
					<tbody>
						<!-- Remplir avec session -->

						{% for p in panier.produits %}

							<tr>
								<td>{{p.nom}}</td>
								<td>${{p.prix}}</td>
								<td><input type="number" name={{p.produitId}} value={{p.getQuantiteCommandee()}} min="0" max="20"></td>
								<td>${{p.prix * p.quantiteCommandee}}</td>
								<td>
									<a href="{{path('supprimerProduit',{nomProduit:p.nom})}}">supprimer</a>
								</td>
							</tr>

						{% endfor %}
					</tbody>
					<tfoot>
						<tr>
							<td colspan="2"></td>
							<td>Total achat</td>
							<td>${{panier.getValeurPanier()}}</td>
							<td></td>
						</tr>
						<tr>
							<td colspan="2"></td>
							<td>Frais de livraison
							</td>
							<td>${{panier.getFraisLivraison}}</td>
							<td></td>
						</tr>
						<tr>
							<td colspan="2"></td>
							<td>Total avant taxes</td>
							<td>${{panier.getTotalAvantTaxes()}}</td>

						</tr>
						<tr>
							<td colspan="2"></td>
							<td>TPS (0,05)</td>
							<td>${{panier.getTPS()}}</td>
							<td></td>
						</tr>
						<tr>
							<td colspan="2"></td>
							<td>TVQ (0,09975)</td>
							<td>${{panier.getTVQ()}}</td>
							<td></td>
						</tr>
						<tr>
							<th colspan="2"></th>
							<th>Total</th>
							<th>{{panier.getTotalAchat()}}</th>
							<td>
								<a href="#" class="btn btn-danger">Payer $</a>
							</td>
						</tr>

					</tfoot>
				</table>
			</form>

		</div>

	{% endif %}

{% endblock %}
